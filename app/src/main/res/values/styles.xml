<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TitleCollapsedToolbar" parent="TextAppearance.AppCompat.Title">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TitleToolbar" parent="TextAppearance.AppCompat.Title">
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TitleExpandToolbar" parent="TextAppearance.AppCompat.Title">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">32sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="point_movie_info">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">?attr/colorSecondaryVariant</item>
        <item name="android:layout_marginVertical">@dimen/margin_small</item>
        <item name="android:layout_marginHorizontal">@dimen/margin_medium</item>
    </style>

    <style name="point_filter_movie">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">@dimen/margin_medium</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">?attr/colorSecondaryVariant</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="result_filter">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/margin_medium</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">?attr/colorSecondaryVariant</item>
    </style>

</resources>